@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "All Users";
}
 
<a asp-action="Create" class="btn btn-success">Add New Role</a>

@if (Model.Count()>0)
{
    <h1>All Users</h1>
    <form class="row" asp-action="Index">
        <div class="col-8">
            <input class="form-control" type="text" name="SearchValue" placeholder="Role`s Name" />
        </div>

        <div class="col-4">
            <input class="btn btn-info" type="submit" value="Search" />
        </div>
    </form>

    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(Role => Role.id)</td>
                <td>@Html.DisplayNameFor(Role => Role.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    
                    <td>@Role.id</td>
                    <td>@Role.RoleName</td>

                    <partial name="_ButtonPartialView" model="@Role.id"/>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3> There is No Roles </h3>
    </div>
}