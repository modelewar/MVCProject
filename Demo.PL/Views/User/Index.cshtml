@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<form class="row" asp-action="Index">
    <div class="col-8">
        <input class="form-control" type="text" name="SearchValue" placeholder="User`s Name" />
    </div>

    <div class="col-4">
        <input style="color: yellow" type="submit" value="Search" />
    </div>
</form>
@if (Model.Count()>0)
{
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.FName)</td>
                <td>@Html.DisplayNameFor(U => U.LName)</td>
                <td>@Html.DisplayNameFor(U => U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U => U.Email)</td>
                <td>@Html.DisplayNameFor(U => U.Roles)</td>
 
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
            
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                   <tr>
                    <td>@user.Id</td>
                    <td>@user.FName</td>
                    <td>@user.LName</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Email</td>
                    <td>@string.Join(", ", user.Roles)</td>

                    <partial name="_ButtonPartialView" model="user.Id" />
                   </tr>
                
            }


        </tbody>
    </table>
}
else
{

<div style="border: 1px solid red; background-color: #f8d7da; color: #721c24; padding: 10px; border-radius: 5px; text-align: center;">
    <strong>User Not Found:</strong> The user you are looking for does not exist.
</div>

}
