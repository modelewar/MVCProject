@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "All Employees";
}

<a asp-action="Create" class="btn btn-success">Create New Employee</a>
<br />

@if (Model.Count()>0)
{
    <h1>All Employees</h1>
    <form class="row" asp-action="Index">
        <div class="col-8">
            <input class="form-control" type="text" name="SearchValue" placeholder="Employees`s Name" />
        </div>

        <div class="col-4">
            <input class="btn btn-info" type="submit" value="Search" />
        </div>
    </form>
    
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(Employee => Employee.Image)</td>
                <td>@Html.DisplayNameFor(Employee => Employee.Name)</td>
                <td>@Html.DisplayNameFor(Employee => Employee.Age)</td>
                <td>@Html.DisplayNameFor(Employee => Employee.Salary)</td>
                <td>@Html.DisplayNameFor(Employee => Employee.Department)</td>
                <td>@Html.DisplayNameFor(Employee => Employee.Address)</td>
                <td>@Html.DisplayNameFor(Employee => Employee.Email)</td>
                <td>@Html.DisplayNameFor(Employee => Employee.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(Employee => Employee.HirDate)</td>
                <td>@Html.DisplayNameFor(Employee => Employee.Isctive)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td><img src="~/Fiels/Images/@employee.ImageName" class="rounded" height="40" width="40" alt="Employee Image"/> </td>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@Html.DisplayFor(E=> employee.Salary)</td>
                    <td>@Html.DisplayFor(E => employee.Department.Name)</td>
                    <td>@employee.Address</td>
                    <td>@Html.DisplayFor(E => employee.Email)</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@employee.HirDate</td>
                    <td>
                        @if (employee.Isctive== true)
                        {

                            <i class="fa-solid fa-circle" style="color:green"></i>
                        }
                        else
                        {
                          <i class="fa-solid fa-circle" style="color:red"></i>
                        }

                    </td>


                    <partial name="_ButtonPartialView" model="@employee.Id" />
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3> There is No Employees </h3>
    </div>
}



